<div class="container d-flex justify-content-center">
  <div class="row-4 mb-3">
    <h3>新規登録</h3>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
    
      <div class="field mb-2">
        <%= f.label :ユーザー名, class: 'mb-0' %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>
    
      <div class="field mb-2">
        <%= f.label :メールアドレス, class: 'mb-0' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    
      <div class="field mb-2">
        <%= f.label :パスワード, class: 'mb-0' %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "password" %>
      </div>
    
      <div class="field mb-2">
        <%= f.label :パスワード, class: 'mb-0' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "password" %>
      </div>
    
      <div class="actions mt-3">
        <%= f.submit "新規登録" %>
      </div>
    <% end %>
    
    <%= render "public/shared/links" %>

  </div>
</div>
