<% if post.favorited_by?(current_end_user) %>
  <%= link_to post_favorites_path(post_id: post.id), method: :delete, remote: true, class: "text-dark" do %>
    <i class="fas fa-heart fa-lg" aria-hidden="true" style="color: #eb0000;"></i>
    <%= post.favorites.count %>
  <% end %>
<% else %>
  <%= link_to post_favorites_path(post_id: post.id), method: :post, remote: true, class: "text-dark" do %>
    <i class="fas fa-heart fa-lg" aria-hidden="true" style="color: #828997;"></i>
    <%= post.favorites.count %>
  <% end %>
<% end %>
