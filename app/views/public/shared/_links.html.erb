<%- if controller_name != 'sessions' %>
  <%= link_to "登録済みの方はログインへ", new_session_path(resource_name), class: 'btn btn-outline-secondary btn-sm ml-0 my-2' %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "新規登録はこちら", new_registration_path(resource_name), class: 'btn btn-outline-secondary btn-sm mi-0 my-2' %><br />
<% end %>
