<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h3>投稿の編集画面</h3>
        <%= form_with model: @post, local:true do |f| %>
          <div class="form-group">
            <% @post.post_images.each do |image| %>
              <%= image_tag image.variant(resize: '200x200'), class: "mt-1" %>
            <% end %>
          </div>
          <div class="mb-2">
            <span>投稿写真を変更する</span>  
            <%= f.file_field :post_images, direct_upload: true, multiple: true %>
          </div>
          <div>
            <%= f.label :投稿写真の場所 %>
            <%= f.text_field :place_name, class: 'form-control book_title' %>
          </div>
          <div class="form-group">
            <%= f.label :投稿内容 %>
            <%= f.text_area :caption, class: 'form-control book_body' %>
          </div>
          <div class="form-group">
            <%= f.submit "更新", class: 'btn btn-success' %>
          </div>
        <% end %>
    </div>
  </div>
</div>