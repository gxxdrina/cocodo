<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'public/end_users/info', end_user: @end_user %>
    </div>
    <div class='col-md-7'>
      <% if @post.errors.any? %>
        <%= @post.errors.count %>件のエラーが発生しました
        <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      
      <h3>新規投稿</h3>
      <%= form_with model: @post, url: posts_path do |f| %>
        <%= f.file_field :post_images, direct_upload: true, multiple: true %><br>
        
        <%= f.label :投稿写真の場所 %>
        <%= f.text_field :place_name, class: "form-control place_name" %>
        
        <%= f.label :投稿内容 %>
        <%= f.text_area :caption, class: "form-control caption" %>
        
        <%= f.submit "新規投稿", class: 'btn btn-secondary mt-3' %>
      <% end %>
    </div>
  </div>
</div>