<div class="container">
  <div class="row">
    <% posts.each do |p| %>
      <div class="d-flex flex-wrap">
        <%= link_to post_path(p) do %>
          <%= image_tag p.post_images[0].variant(resize: '250x250') %><br>
          <%= p.place_name %>
        <% end %>
      </div>
      
    <% end %>
  </div>
</div> 