<div class="container">
  <div class="row">
    <% posts.each do |p| %>
      <div class="d-flex flex-wrap m-2">
        <%= link_to post_path(p) do %>
          <!--投稿写真の１枚目のみを表示-->
          <%= image_tag p.post_images[0].variant(resize: '250x250') %><br>
          
          <%= truncate(p.place_name, length: 15, omission: '...') %>
        <% end %>
      </div>
      
    <% end %>
  </div>
</div> 