      <%= render 'info', end_user: current_end_user %>
    </div>
    
    <div class='col-md-9'>
      <div style="display: flex; align-items: center;">
        <i class="fa-solid fa-images fa-lg" style="color: #420000;"></i>
        <h4 style="font-size: 24px; margin-left: 8px;">みんなの投稿</h4>
      </div>
      
      <%= render 'public/posts/index', posts: @posts %>
      <%= paginate @posts %>
    </div>
  </div>
</div>