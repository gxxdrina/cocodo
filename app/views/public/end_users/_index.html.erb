<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% end_users.each do |end_user| %>
      <tr>
        <td>
          <% if end_user.profile_image %> 
            <%= image_tag end_user.get_profile_image, class: "rounded-circle my-2" , size: '50x50' %>
          <% else %>
            <%= image_tag "default-image.jpg", class: "rounded-circle", size: "50x50" %>
          <% end %>
        <td><%= end_user.name %></td>
        <td>
          <% if current_end_user != end_user%>
            <% if current_end_user.following?(end_user) %>
              <%= link_to "フォローをやめる", end_user_relationships_path(end_user.id), method: :delete, class: "btn btn-info" %>
            <% else %>
              <%= link_to "フォローする", end_user_relationships_path(end_user.id), method: :post, class: "btn btn-success" %>
            <% end %>
          <% end %>
        </td>
        <td><%= link_to '投稿を見る', end_user %></td>
      </tr>
    <% end %>
  </tbody>
</table>
