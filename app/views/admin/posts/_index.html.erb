<div class="container">
  <div class="row">
    <% posts.each do |posts| %>
      <div class="shadow-sm p-3 m-1 bg-white rounded border border-2 d-flex flex-wrap">
        <%= link_to admin_post_path(posts) do %>
          <!--投稿写真の１枚目のみを表示-->
          <%= image_tag posts.post_images[0].variant(resize: '230x230'), class: "rounded" %><br>
          
          <%= truncate(posts.place_name, length: 15, omission: '...') %>
          
          <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i><%= posts.favorites.count %>
          
          <p>投稿者 <%= posts.end_user.name %></p>
        <% end %>
      </div>
    <% end %>
  </div>
</div> 